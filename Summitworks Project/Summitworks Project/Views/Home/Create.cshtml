
    @model Book
    @{
        ViewData["Title"] = "Create";
    }
    <form asp-controller="home" asp-action="create" method="post">
        <div class="form-group row">
            <label asp-for="BookName" class="col-sm-2 col-form-label">Book Name</label>
            <div class="col-sm-10">
                <input asp-for="BookName" class="form-control" placeholder="Book Name" />
                <span asp-validation-for="BookName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="BookAuthor" class="col-sm-2 col-form-label">Author</label>
            <div class="col-sm-10">
                <input asp-for="BookAuthor" class="form-control" placeholder="Author" />
                <span asp-validation-for="BookAuthor" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="BookCategory" class="col-sm-2 col-form-label">Category</label>
            <div class="col-sm-10">
                <select asp-for="BookCategory" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Category>()">
                   <option value="">Please select</option>
                </select>
                <span asp-validation-for="BookCategory" class="text-danger"></span>
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row" >
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>
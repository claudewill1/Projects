@model HomeDetailsViewModel
@{
    ViewBag.Title = "Book Details";
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Book.BookName</h1>
            </div>

            <div class="card-body text-center">
                <img asp-append-version="true" class="card-img-top" src="~/images/images.jpg" />

                <h4>Book ID : @Model.Book.Id</h4>
                <h4>Author : @Model.Book.BookAuthor</h4>
                <h4>Category : @Model.Book.BookCategory</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

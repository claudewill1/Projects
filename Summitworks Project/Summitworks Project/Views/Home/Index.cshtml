@model IEnumerable<Book>
@{ 
   ViewBag.Title = "Book List";
}
<div class="card-deck">
    @foreach (var book in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3>@book.BookName</h3>
            </div>
            <img asp-append-version="true" class="card-img-top" src="~/images/images.jpg" />
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@book.Id" class="btn btn-primary">View</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>


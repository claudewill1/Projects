@model Summitworks_EventManager.Models.Event
@{
    ViewData["Title"] = "Create Event";
}

<form asp-controller="home" asp-action="create" method="post">
    <!--Enter Event Name-->
    <div class="form-group row">
        <label asp-for="EventName" class="col-sm-2 col-form-label">Event Name</label>
        <div class="col-sm-10">
            <input asp-for="EventName" class="form-control" placeholder="Book Name" />
            <span asp-validation-for="EventName" class="text-danger"></span>
        </div>

    </div>
    <!--Select Event Category-->
    <div class="form-group row">
        <label asp-for="EventCategory" class="col-sm-2 col-form-label">Category</label>
        <div class="col-sm-10">
            <select asp-for="EventCategory" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Category>()">
                <option value="">Please select</option>
            </select>
            <span asp-validation-for="EventCategory" class="text-danger"></span>
        </div>

    </div>
    <!--Enter Event Organizer-->
    <div class="form-group row">
        <label asp-for="Organizer" class="col-sm-2 col-form-label">Organizer</label>
        <div class="col-sm-10">
            <input asp-for="Organizer" class="form-control" placeholder="Organizer Name" />
            <span asp-validation-for="Organizer" class="text-danger"></span>
        </div>

    </div>
    <!--Address Line 1-->
    <div class="form-group row">
        <label asp-for="Address" class="col-sm-2 col-form-label">Address</label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control" placeholder="Address (Physical)" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <label asp-for="City" class="col-sm-2 col-form-label">City</label>
        <div class="col-sm-10">
            <input asp-for="City" class="form-control" placeholder="City" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

    </div>

    <div class="form-group row">
        <label asp-for="State" class="col-sm-2 col-form-label">State</label>
        <div class="col-sm-10">
            <select asp-for="State" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<States>()">
                <option value="">Please select</option>
            </select>
        </div>

    </div>
    <div class="form-group row">
        <label asp-for="ZipCode" class="col-sm-2 col-form-label">Zip Code</label>
        <div class="col-sm-10">
            <input asp-for="ZipCode" class="form-control" placeholder="ZipCode" />
            <span asp-validation-for="ZipCode" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <label asp-for="EventDescription" class="col-sm-2 col-form-label">Event Description</label>
        <div class="col-sm-10">
            <input asp-for="EventDescription" class="form-control" placeholder="Event Description" />
            <span asp-validation-for="EventDescription" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <label asp-for="EventName" class="col-sm-2 col-form-label">Event Name</label>
        <div class="col-sm-10">
            <input asp-for="EventName" class="form-control" placeholder="Book Name" />
            <span asp-validation-for="EventName" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <label asp-for="EventName" class="col-sm-2 col-form-label">Event Name</label>
        <div class="col-sm-10">
            <input asp-for="EventName" class="form-control" placeholder="Book Name" />
            <span asp-validation-for="EventName" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <label asp-for="EventName" class="col-sm-2 col-form-label">Event Name</label>
        <div class="col-sm-10">
            <input asp-for="EventName" class="form-control" placeholder="Book Name" />
            <span asp-validation-for="EventName" class="text-danger"></span>
        </div>

    </div>
</form>